include-file = $HOME/.config/polybar/include-modules.ini

[bar/main]
width = 100%
height = 30
offset-y = 7
bottom = false
fixed-center = true

wm-restack = bspwm
; wm-restack = i3

override-redirect = false

scroll-up = next
scroll-down = prev

enable-ipc = true

background = ${colors.bg}
foreground = ${colors.fg}

include-file = $HOME/.config/polybar/fonts.ini

modules-left = margin round-left date round-right margin round-left layout temperature round-right
modules-center = round-left bspwm round-right
modules-right =  round-left wlan round-right margin round-left memory cpu battery round-right margin round-left-red session round-right-red margin round-right-dark

tray-background = ${colors.bg}
tray-position = right
tray-maxsize = 16

cursor-click = pointer
cursor-scroll = ns-resize

[settings]
screenchange-reload = true
